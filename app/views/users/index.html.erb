<h2>Users</h2>
<%= link_to 'New User', new_user_registration_path %>
<table class="table table-bordered table-hover">
  <tr class="info">
    <td>Username</td>
    <td>Email</td>
    <td>Role</td>
    <td></td>
    <td></td>
  </tr>
  <% @users.each do |user| %>
  <tr class="warning">
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>
