<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @book.avatar.url %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<div>
	<% @book.comments.each do |comment| %>
		<%= comment.email %>
		<%= comment.name %>
		<%= comment.content %>
</div>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
