<% @books.each do |book| %>
	<div class="jumbotron">
		<div class="row">
		  <div class="col-xs-6 col-md-4">
			<%= link_to image_tag(book.avatar.url(:large), class:"img-thumbnail"), book %>
		  </div>
		  <div class="col-xs-12 col-md-8">
			<h2><%= link_to book.title, book %></h2>
			<p class="text-muted"><%= book.author %></p>
			<p><%= truncate(book.description, length: 50) %></p>
			<h3><small>Comments: <%= comments_count(book) %></small></h3>
		  </div>
		</div>
	</div>
<% end %>
<%= will_paginate @books %>